<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.umkc.ch043097.freshstart.MainActivity">

    <TextView android:id="@+id/jobs_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a job title, we'll break\ndown the matching jobs by city"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.062"
        android:layout_marginTop="124dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/job_title_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Job Title"
        android:layout_below="@+id/jobs_greeting"
        android:layout_alignRight="@+id/jobs_greeting"
        android:layout_alignEnd="@+id/jobs_greeting"
        android:layout_alignLeft="@+id/jobs_greeting"
        android:layout_alignStart="@+id/jobs_greeting" />

    <Button
        android:id="@+id/job_title_search_button"
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:text="Search"
        android:background="#fdb813"
        android:textColor="#FFF"
        android:layout_below="@+id/job_title_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />


</RelativeLayout>
